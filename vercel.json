{
    "version": 2,
    "builds": [
        {
            "src": "app.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "app.js"
        }
    ],
    "functions": {
        "app.js": {
            "includeFiles": [
                "views/**",
                "public/**",
                "router/**",
                "middleware/**",
                "output/**"
            ]
        }
    },
    "env": {
        "PORT": "3000"
    }
}