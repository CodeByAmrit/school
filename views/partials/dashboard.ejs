<% if (typeof performanceData !== 'undefined' && performanceData.length > 0) { %>
<script src="https://cdn.jsdelivr.net/npm/chart.js" nonce="<%= nonce %>"></script>
<script nonce="<%= nonce %>">
    document.addEventListener('DOMContentLoaded', function () {
        const performanceData = <%- JSON.stringify(performanceData) %>;
        
        if (performanceData.length > 0) {
            const labels = performanceData.map(d => d.subject);
            const data = performanceData.map(d => d.average_percentage);

            const ctx = document.getElementById('performanceChart').getContext('2d');
            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Average Performance',
                        data: data,
                        backgroundColor: 'rgba(54, 162, 235, 0.5)',
                        borderColor: 'rgba(54, 162, 235, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            max: 100
                        }
                    },
                    plugins: {
                        legend: {
                            display: false
                        }
                    }
                }
            });
        }
    });
</script>
<% } %>
