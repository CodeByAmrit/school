<div class="p-4 sm:ml-64 dark:bg-gray-900 dark:text-white">
    <div class="w-full h-full mt-10 dark:bg-gray-900 dark:text-white">
        <p class="pt-5 text-2xl">Students Details</p>

        <form action="/search" method="get">
            <%- include('./search.ejs') %>

                <p class=" my-3 text-xl">Edit Profiles</p>

                <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
                    <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
                        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                            <tr>
                                <!-- Select All Checkbox -->
                                <th scope="col" class="px-3 py-3">
                                    <input type="checkbox" id="select-all"
                                        class="form-checkbox w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 dark:focus:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600">
                                </th>
                                <th scope="col" class="px-3 py-3">
                                    Roll No
                                </th>
                                <th scope="col" class="px-3 py-3 ">
                                    Name
                                </th>
                                <th scope="col" class="px-6 py-3">
                                    Class
                                </th>
                                <th scope="col" class="px-6 py-3">
                                    Session
                                </th>
                                <th scope="col" class="px-6 py-3">
                                    Profile
                                </th>
                                <th scope="col" class="px-6 py-3">
                                    Marks
                                </th>
                                <th scope="col" class="px-6 py-3">
                                    Files
                                </th>
                                <th scope="col" class="px-6 py-3">
                                    Delete
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (studentlist.length> 0) { %>
                                <% studentlist.forEach((student)=> { %>
                                    <tr
                                        class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600 cursor-pointer">
                                        <!-- Checkbox for each row -->
                                        <td class="px-3 py-3">
                                            <input type="checkbox"
                                                class="student-checkbox w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 dark:focus:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600"
                                                data-id="<%= student.school_id %>">
                                        </td>
                                        <th scope="row"
                                            class="px-3 py-3 font-medium  whitespace-nowrap dark:text-white">
                                            <%= student.roll %>
                                        </th>
                                        <td
                                            class="px-3 py-3 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                                            <%= student.name.split(' ')[0] %>
                                        </td>
                                        <td class="px-6 py-4">
                                            <%= student.class %>
                                        </td>
                                        <td class="px-6 py-4">
                                            <%= student.session %>
                                        </td>
                                        <td class="px-6 py-4 flex justify-center items-center">
                                            <a href="/student/edit/<%= student.school_id %>"
                                                class="font-medium text-blue-600 dark:text-blue-500 hover:underline">
                                            <svg xmlns="http://www.w3.org/2000/svg" id="Layer_1" data-name="Layer 1" viewBox="0 0 24 24" width="20" height="20">
                                                <path fill="#3f83f8"
                                                    d="M9,12c-3.309,0-6-2.691-6-6S5.691,0,9,0s6,2.691,6,6-2.691,6-6,6Zm4.27,7.48c-.813,.813-1.27,1.915-1.27,3.065v1.455h1.455c1.15,0,2.252-.457,3.065-1.27l6.807-6.807c.897-.897,.897-2.353,0-3.25-.897-.897-2.353-.897-3.25,0l-6.807,6.807Zm-3.27,3.065c0-1.692,.659-3.283,1.855-4.479l2.376-2.376c-1.476-1.06-3.279-1.691-5.231-1.691C4.038,14,0,18.038,0,23c0,.552,.448,1,1,1H10v-1.455Z" />
                                            </svg>
                                            </a>
                                            <!-- <span>|</span> -->

                                        </td>
                                        
                                        <td class="px-6 py-4 text-center">
                                            <a href="/student/get_marks/<%= student.school_id %>"
                                                class="font-medium text-blue-600 dark:text-blue-500 hover:underline flex justify-center items-center">
                                                <svg xmlns="http://www.w3.org/2000/svg" id="Layer_1" data-name="Layer 1" viewBox="0 0 24 24" width="20" height="20">
                                                    <path fill="#3f83f8"
                                                        d="m12,7V.46c.913.346,1.753.879,2.465,1.59l3.484,3.486c.712.711,1.245,1.551,1.591,2.464h-6.54c-.552,0-1-.449-1-1Zm1.27,12.48c-.813.813-1.27,1.915-1.27,3.065v1.455h1.455c1.15,0,2.252-.457,3.065-1.27l6.807-6.807c.897-.897.897-2.353,0-3.25-.897-.897-2.353-.897-3.25,0l-6.807,6.807Zm-3.27,3.065c0-1.692.659-3.283,1.855-4.479l6.807-6.807c.389-.389.842-.688,1.331-.901-.004-.12-.009-.239-.017-.359h-6.976c-1.654,0-3-1.346-3-3V.024c-.161-.011-.322-.024-.485-.024h-4.515C2.243,0,0,2.243,0,5v14c0,2.757,2.243,5,5,5h5v-1.455Z" />
                                                </svg>
                                            </a>
                                        </td>
                                        
                                        <td class="px-6 py-4 flex justify-center items-center">
                                            <a href="/files/one/<%= student.school_id %>"
                                                class="font-medium text-green-500 dark:text-blue-500 hover:underline">
                                                <svg xmlns="http://www.w3.org/2000/svg" id="Layer_1" data-name="Layer 1"
                                                    viewBox="0 0 24 24" width="20" height="20"
                                                    class="text-blue-600 hover:text-blue-800 cursor-pointer">
                                                    <path fill="#3f83f8"
                                                        d="m0,18V5C0,2.794,1.794,1,4,1h2c.464,0,.928.109,1.342.316l3.155,1.578c.138.069.293.105.447.105h5.056c2.757,0,5,2.243,5,5h-10.976c-2.638,0-5.003,1.766-5.754,4.303l-2.673,9.339c-.977-.913-1.597-2.203-1.597-3.642Zm23.493-6.983c-.479-.643-1.209-1.012-2.008-1.025-.015,0-.027.008-.042.008h-11.419c-1.758,0-3.335,1.177-3.834,2.862l-2.818,9.843c.513.178,1.055.295,1.628.295h12.558c2.226,0,4.15-1.432,4.802-3.607l1.532-6.116c.234-.782.089-1.605-.398-2.26Z" />
                                                </svg>
                                            </a>
                                        </td>

                                        <td class="px-6 py-4">
                                            <a href="/delete/<%= student.school_id %>" id="delete-link-<%= student.school_id %>"
                                                class="font-medium text-red-400 dark:text-blue-500 hover:underline">
                                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"
                                                    class="w-5 h-5 fill-current text-red-400 dark:text-blue-500 hover:text-red-500 dark:hover:text-blue-600">
                                                    <g>
                                                        <path fill="#3f83f8"
                                                            d="M448,85.333h-66.133C371.66,35.703,328.002,0.064,277.333,0h-42.667c-50.669,0.064-94.327,35.703-104.533,85.333H64   c-11.782,0-21.333,9.551-21.333,21.333S52.218,128,64,128h21.333v277.333C85.404,464.214,133.119,511.93,192,512h128   c58.881-0.07,106.596-47.786,106.667-106.667V128H448c11.782,0,21.333-9.551,21.333-21.333S459.782,85.333,448,85.333z    M234.667,362.667c0,11.782-9.551,21.333-21.333,21.333C201.551,384,192,374.449,192,362.667v-128   c0-11.782,9.551-21.333,21.333-21.333c11.782,0,21.333,9.551,21.333,21.333V362.667z M320,362.667   c0,11.782-9.551,21.333-21.333,21.333c-11.782,0-21.333-9.551-21.333-21.333v-128c0-11.782,9.551-21.333,21.333-21.333   c11.782,0,21.333,9.551,21.333,21.333V362.667z M174.315,85.333c9.074-25.551,33.238-42.634,60.352-42.667h42.667   c27.114,0.033,51.278,17.116,60.352,42.667H174.315z" />
                                                    </g>
                                                </svg>
                                            </a>
                                        </td>


                                    </tr>
                                    <% }); %>
                                        <% } else { %>
                                            <tr>
                                                <td colspan="8" class="border px-4 py-2 text-center text-gray-500">No
                                                    students available.</td>
                                            </tr>
                                            <% } %>
                        </tbody>
                    </table>
                </div>

        </form>
    </div>
</div>

<script src="/js/confirmDelete.js"></script>