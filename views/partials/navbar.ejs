<aside
  id="logo-sidebar"
  class="fixed top-0 left-0 z-40 w-64 h-screen transition-transform -translate-x-full sm:translate-x-0 bg-white border-r border-gray-200 dark:bg-gray-800 dark:border-gray-700"
  aria-label="Sidebar"
>
  <!-- Logo Section -->
  <div class="px-3 py-4 flex justify-center items-center">
    <a href="/" class="flex items-center">
      <img src="/image/main.svg" alt="Logo" class="h-8 mr-3" />
      <span
        class="self-center text-blue-600 text-xl font-semibold whitespace-nowrap dark:text-white"
        >StreamVision</span
      >
    </a>
  </div>

  <div class="h-full px-3 pb-4 overflow-y-auto bg-white dark:bg-gray-800">
    <ul class="space-y-2 font-medium">
      <!-- Add New Student Button -->
      <li class="px-2 pt-4 pb-2">
        <a
          href="/student/new"
          class="flex items-center justify-center w-full p-3 text-sm text-white rounded-lg bg-gradient-to-br from-[#63b3ed] to-[#3182ce] hover:from-[#3182ce] hover:to-[#63b3ed] text-white px-6 py-3 rounded-lg font-medium transition-all duration-300 shadow-md hover:shadow-lg"
        >
          <i class="fas fa-user-plus w-5 h-5 mr-3"></i>
          <span>New Student</span>
        </a>
      </li>

      <!-- Main Navigation -->
      <li>
        <a
          href="/dashboard"
          class="flex items-center p-3 text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 group"
        >
          <i
            class="fas fa-chart-pie w-5 h-5 text-gray-900 transition duration-75 dark:text-gray-400 group-hover:text-gray-900 dark:group-hover:text-white"
          ></i>
          <span class="ms-3">Dashboard</span>
        </a>
      </li>
      <li>
        <a
          href="/students"
          class="flex items-center p-3 text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 group"
        >
          <i
            class="fa-solid fa-user w-5 h-5 text-gray-900 transition duration-75 dark:text-gray-400 group-hover:text-gray-900 dark:group-hover:text-white"
          ></i>
          <span class="flex-1 ms-3 whitespace-nowrap">Students</span>
          <span
            class="inline-flex items-center justify-center w-6 h-6 text-xs font-bold text-white bg-blue-500 rounded-full"
          >
            <%= total_students || 0 %>
          </span>
        </a>
      </li>
      <li>
        <a
          href="/students/leaved"
          class="flex items-center p-3 text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 group"
        >
          <i
            class="fas fa-user-slash w-5 h-5 text-gray-900 transition duration-75 dark:text-gray-400 group-hover:text-gray-900 dark:group-hover:text-white"
          ></i>
          <span class="flex-1 ms-3 whitespace-nowrap">Leaved Students</span>
        </a>
      </li>

      <!-- Divider -->
      <li class="py-2">
        <hr class="border-t border-gray-200 dark:border-gray-600" />
      </li>

      <!-- Secondary Navigation -->
      <li>
        <a
          href="/files"
          class="flex items-center p-3 text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 group"
        >
          <i
            class="fas fa-folder-open w-5 h-5 text-gray-900 transition duration-75 dark:text-gray-400 group-hover:text-gray-900 dark:group-hover:text-white"
          ></i>
          <span class="flex-1 ms-3 whitespace-nowrap">File Manager</span>
        </a>
      </li>
      <li>
        <a
          href="/ai/chat"
          class="flex items-center p-3 text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 group"
        >
          <i
            class="fas fa-robot w-5 h-5 text-gray-900 transition duration-75 dark:text-gray-400 group-hover:text-gray-900 dark:group-hover:text-white"
          ></i>
          <span class="flex-1 ms-3 whitespace-nowrap">AI Chat</span>
        </a>
      </li>
    </ul>
  </div>
</aside>
