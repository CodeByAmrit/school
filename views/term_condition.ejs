        background: #f1f5f9;
      }

      ::-webkit-scrollbar-thumb {
        background: linear-gradient(to bottom, #63b3ed, #3182ce);
        border-radius: 4px;
      }

      /* Animation */
      @keyframes fadeInUp {
        from {
          opacity: 0;
          transform: translateY(20px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .fade-in-up {
        animation: fadeInUp 0.6s ease-out;
      }

      .sticky-nav {
        position: sticky;
        top: 100px;
        align-self: start;
      }

      .terms-section {
        scroll-margin-top: 120px;
      }

      /* Checkmark animation */
      @keyframes checkmark {
        0% {
          transform: scale(0);
        }
        50% {
          transform: scale(1.2);
        }
        100% {
          transform: scale(1);
        }
      }

      .checkmark-animate {
        animation: checkmark 0.5s ease-out;
      }
