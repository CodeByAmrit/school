                <!-- School Settings -->
                <div id="school-tab" class="settings-content hidden">
                    <div class="glass-panel rounded-2xl p-6 settings-section">
                        <div class="flex items-center mb-6">
                            <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-blue-100 to-blue-50 dark:from-blue-900/30 dark:to-blue-800/20 flex items-center justify-center mr-4">
                                <i class="fas fa-school text-blue-600 dark:text-blue-400 text-xl"></i>
                            </div>
                            <div>
                                <h3 class="text-xl font-bold text-gray-900 dark:text-white">School Information</h3>
                                <p class="text-gray-600 dark:text-gray-400 text-sm">Update school details and configuration</p>
                            </div>
                        </div>
                        
                        <div class="grid grid-cols-1 gap-6">
                            <!-- School Logo Upload -->
                            <div class="text-center">
                                <label for="school-logo" class="cursor-pointer">
