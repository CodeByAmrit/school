{
  "name": "student_tracker",
  "version": "1.4.0",
  "description": "Generate Certificate for students",
  "main": "app.js",
  "scripts": {
    "start": "node ./bin/www",
    "dev": "nodemon ./bin/www",
    "format": "npx prettier --write .",
    "build:css": "npx tailwindcss -i ./src/input.css -o ./public/css/style.css --watch",
    "build": "npx tailwindcss -i ./src/input.css -o ./public/css/style.css --minify",
    "vercel-build": "npm install && npm run build",
    "start:pm2": "pm2 start ./bin/www --name studenttracker --env production",
    "lint": "npx eslint .",
    "test": "jest --coverage",
    "docker:build": "docker build -t codebyamrit/student-tracker:1.4.0 .",
    "docker:run": "docker compose up -d",
    "security:check": "npm audit --audit-level=moderate",
    "clean": "rm -rf node_modules package-lock.json"
  },
  "keywords": [
    "student",
    "tracker",
    "certificate",
    "pdf",
    "express",
    "mysql"
  ],
  "author": "Amrit",
  "license": "ISC",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@pdf-lib/fontkit": "^1.1.1",
    "bcrypt": "^6.0.0",
    "body-parser": "^2.2.2",
    "bootstrap": "^5.3.8",
    "chart.js": "^4.5.1",
    "child_process": "^1.0.2",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "debug": "^4.3.4",
    "dotenv": "^17.2.3",
    "ejs": "^4.0.1",
    "exceljs": "^4.4.0",
    "express": "^5.2.1",
    "express-jwt": "^8.5.1",
    "express-openid-connect": "^2.19.4",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.19.0",
    "express-validator": "^7.3.1",
    "flowbite": "^4.0.1",
    "google-auth-library": "^10.5.0",
    "googleapis": "^170.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "mysql2": "^3.16.1",
    "nodemailer": "^7.0.12",
    "nodemon": "^3.1.11",
    "pdf-lib": "^1.17.1",
    "serve-favicon": "^2.5.1",
    "sharp": "^0.34.5",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@emnapi/runtime": "^1.8.1",
    "prettier": "^3.8.1",
    "prettier-plugin-ejs": "^1.0.3",
    "tailwindcss": "^3.4.17"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.ejs",
        "options": {
          "parser": "html"
        }
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codebyamrit/school.git"
  },
  "bugs": {
    "url": "https://github.com/codebyamrit/school/issues"
  },
  "homepage": "https://github.com/codebyamrit/school#readme"
}
